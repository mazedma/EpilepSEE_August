<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 눌렸을 때 -->
    <item android:state_pressed="true">
        <ripple android:color="#6528F7"> <!-- 클릭 효과 색상 -->
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" /> <!-- 둥근 모서리 반경 -->
                    <solid android:color="#6528F7" /> <!-- 클릭 시 배경색 -->
                </shape>
            </item>
        </ripple>
    </item>
    <!-- 버튼이 눌리지 않았을 때 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- 둥근 모서리 반경 -->
            <solid android:color="#A076F9" /> <!-- 기본 배경색 -->
        </shape>
    </item>
</selector>
